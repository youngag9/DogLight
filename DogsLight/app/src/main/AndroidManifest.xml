<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.dogslight">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dog"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dog"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ChangePwdActivity" />
        <activity android:name=".ValidatePwdActivity" />
        <activity android:name=".AddDogActivity" />
        <activity android:name=".AddDogFoodActivity" />
        <activity android:name=".EditDogActivity" />
        <activity android:name=".EditDogFoodActivity" />
        <activity android:name=".TempPwdActivity" />
        <activity android:name=".AddScheduleActivity" />
        <activity android:name=".LightModeActivity" ></activity>
    </application>

</manifest>