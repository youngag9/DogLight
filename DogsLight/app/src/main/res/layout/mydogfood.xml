<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <!-- MyFragment내의 사료 목록을 보여주는 listView에 들어가는 항목 -->

    <!-- 사료 이름을 보여주는 textView -->
    <TextView
        android:id="@+id/myFoodNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:text="이름"
        android:textStyle="bold"
        android:textColor="#000000"
        />


    <!-- 사료 단백질 함량을 보여주는 textView -->
    <TextView
        android:id="@+id/myFoodProteinText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:text="단백질"
        android:textColor="#000000"
       />

    <!-- 사료 지방 함량을 보여주는 textView -->
    <TextView
        android:id="@+id/myFoodFatText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:text="지방"
        android:textColor="#000000"
       />

    <!-- 사료 섬유질 함량을 보여주는 textView -->
    <TextView
        android:id="@+id/myFoodFiberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:text="섬유질"
        android:textColor="#000000"
        />

    <!-- 삭제 작업을 하는 버튼: 누르면 DeleteDogFoodRequest가 불려 삭제작업을 한다. -->
    <Button
        android:id="@+id/delFoodButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="#ffffff"
        android:padding="5dp"
        android:text="삭제"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"/>


</LinearLayout>